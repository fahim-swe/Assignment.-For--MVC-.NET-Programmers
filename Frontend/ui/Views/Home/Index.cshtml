    $('#FatherName').prop( "disabled", true).css('border-color', 'grey');
    $('#MotherName').prop("disabled", true).css('border-color', 'grey');
    $('#Country').prop( "disabled", true).css('border-color', 'grey');
   
    $("#radio1").prop( "disabled", true);
    $("#radio2").prop( "disabled", true);
    $("#radio3").prop( "disabled", true);
    
    $("#CustomerPhoto").hide();

   
    $.ajax({  
        url: "https://localhost:7287/Customer/" + cusID,  
        typr: "GET",  
