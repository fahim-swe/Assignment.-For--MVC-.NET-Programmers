            $("#CustomerName").val(result.customerName);
            $("#FatherName").val(result.fatherName);
            $("#MotherName").val(result.motherName);
            $("#Country").val(result.country.countryName);
            $('#ItemPreview').attr('src', `data:image/png;base64,${result.customerPhoto}`);

          
            
