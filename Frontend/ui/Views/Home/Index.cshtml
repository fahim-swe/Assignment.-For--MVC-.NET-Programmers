    $('.addressData').each(function(){ 
      var textVal = $(this).val(); 
      cusObjFrom.append('Addresss[]', textVal);
    });


    $.ajax({  
        url: "https://localhost:7287/Customer/" + activeCustomerId,  
        data: cusObjFrom,  
        type: "PUT",  
        processData: false,
        contentType: false, 
        success: function (result) {  
            loadData(); 
